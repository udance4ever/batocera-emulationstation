        <name>chihiro</name>
        <fullname>Sega Chihiro</fullname>
        <path>%ROMPATH%/chihiro</path>
        <extension>.iso .ISO</extension>
        <command label="xemu (Standalone)">%EMULATOR_XEMU% -dvd_path %ROM%</command>
        <platform>arcade</platform>
